{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@common": [
        "framework/common"
      ],
      "@common/*": [
        "framework/common/*"
      ],
      "@framework": [
        "framework/shopify"
      ],
      "@framework/*": [
        "framework/shopify/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*",
    "framework/shopify/next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
